extends ../partials/layout

block content
  div.auth-container
    h1 Register
    h2 User information
    form(method='POST' action='/auth/register')
      input(type='text' name='username', placeholder='Choose username' required).credentials
      input(type='email' name='email', placeholder='Enter email' required).credentials
      input(type='password' name='password', placeholder='Choose password' required).credentials
      button(type='submit').button.input-button Register